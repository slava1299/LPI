<Window x:Class="LPI.WarehouseDeliveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LPI"
        mc:Ignorable="d"
        Title="Сдача на склад" WindowState="Maximized" d:DesignWidth="1846.462">
    <Grid Margin="10,60,10,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="756*"/>
            <ColumnDefinition Width="391*"/>
        </Grid.ColumnDefinitions>
        <!-- Добавлены отступы слева и справа -->
        <DataGrid Name="dataGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" FontSize="16 " Grid.ColumnSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер записи" Binding="{Binding VYA}" MinWidth="80" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Серийный номер" Binding="{Binding Snum}" MinWidth="140" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Код SL" Binding="{Binding item}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Название" Binding="{Binding item_desc}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Комментарий" Binding="{Binding comment}" MinWidth="200" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Подразделение" Binding="{Binding podr}" MinWidth="125" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Тип испытаний" Binding="{Binding test_type}" MinWidth="150" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Основание" Binding="{Binding reason}" MinWidth="150" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Результат" Binding="{Binding Result}" MinWidth="200" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Выбрать" Width="Auto">
                    <DataGridTemplateColumn.CellStyle>
                        <Style TargetType="{x:Type DataGridCell}">
                            <Setter Property="Cursor" Value="Hand"/>
                            <!-- Устанавливаем форму курсора -->
                        </Style>
                    </DataGridTemplateColumn.CellStyle>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image x:Name="check" Source="pictures/check.png" Stretch="Uniform" MaxHeight="48" MaxWidth="48" Opacity="0.2"
                   MouseLeftButtonDown="checkVYA"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="findVYA" HorizontalAlignment="Left" Margin="237,-50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="86" Height="29" FontSize="18" TextChanged="VYfind_TextChanged"/>
        <Label Content="Поиск по номеру записи:" HorizontalAlignment="Left" Margin="64,-50,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Button HorizontalAlignment="Left" Margin="0,-50,0,0" VerticalAlignment="Top" Height="44" Width="50" Background="White" BorderBrush="White" Click="Button_Click">
            <Image Source="/pictures/back_ward.png" Stretch="Uniform" />
        </Button>
        <Button Content="Сформировать накладную" Margin="0,-50,0,0" VerticalAlignment="Top" Grid.Column="1" FontSize="16" Height="29" HorizontalAlignment="Right" Width="211" Click="DocButton_Click"/>
        <TextBox x:Name="NUM" HorizontalAlignment="Right" Margin="0,-50,265,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="53" Height="29" FontSize="18" Grid.Column="1"/>
        <Label Content="Порядковый номер:" HorizontalAlignment="Right" Margin="0,-50,323,0" VerticalAlignment="Top" FontSize="14" Grid.Column="1"/>
    </Grid>
</Window>
