<Window x:Class="LPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LPI"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
    Title="Проведение работ в ЛПИ (v 1.0.0 от 14.08.2025)" Height="400" Width="800" Icon="/L_P_I.png">
    <Window.Background>
        <ImageBrush ImageSource="pictures\fon.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Window.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="itemTemplate">
                <TextBlock Text="{Binding FullInfo}" FontSize="14"/>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Image HorizontalAlignment="Left" Height="70" Margin="34,50,0,0" VerticalAlignment="Top" Width="67" Source="pictures\scientist.png"/>
        <Image HorizontalAlignment="Left" Height="75" Margin="34,165,0,0" VerticalAlignment="Top" Width="66" Source="pictures\laboratory.png"/>
        <Label Content="Сотрудник:" HorizontalAlignment="Left" Margin="119,64,0,0" VerticalAlignment="Top" Height="38" Width="141" FontSize="18"/>
        <Label Content="Тип операции:" HorizontalAlignment="Left" Margin="119,179,0,0" VerticalAlignment="Top" Height="38" Width="141" FontSize="18"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="260,186,0,0" VerticalAlignment="Top" Width="502" FontSize="14">
            <ComboBoxItem Content="Приемка ЛПИ" />
            <ComboBoxItem Content="Сдача на склад"/>
        </ComboBox>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Margin="260,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="502" Height="24" TextChanged="textBox1_TextChanged" FontSize="14"/>
        <!-- Перемещаем ListBox под TextBox -->
        <ListBox ScrollViewer.HorizontalScrollBarVisibility="Disabled" x:Name="suggestionListBox"  ItemTemplate="{StaticResource itemTemplate}"  HorizontalAlignment="Left"
                 Margin="260,95,0,0" d:ItemsSource="{d:SampleData ItemCount=5}" Visibility="Collapsed"  VerticalAlignment="Top" Width="502" Height="72" SelectionChanged="suggestionListBox_SelectionChanged"/>
        <Button Content="Вход" Click="Button_Click" HorizontalAlignment="Center" Margin="0,312,0,0" VerticalAlignment="Top" Width="110" FontSize="18" Height="30"  VerticalContentAlignment="Center"  Cursor="Hand"/>
        <Button Content="X" HorizontalAlignment="Left" Margin="738,73,0,0" VerticalAlignment="Top" Height="20" Width="22" Background="White" BorderBrush="White" Foreground="#FFBDBDBD" Click="ButtonDel_Click"/>
    </Grid>
</Window>