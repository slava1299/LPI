<Window x:Class="LPI.AcceptanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Приёмка ЛПИ" WindowState="Maximized">
    <Grid Margin="10,60,10,20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="196*"/>
            <ColumnDefinition Width="207*"/>
            <ColumnDefinition Width="248*"/>
            <ColumnDefinition Width="248*"/>
            <ColumnDefinition Width="248*"/>
        </Grid.ColumnDefinitions>
        <!-- Добавлены отступы слева и справа -->
        <DataGrid Name="dataGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" FontSize="16 " MouseDoubleClick="dataGrid_MouseDoubleClick" Grid.ColumnSpan="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер записи" Binding="{Binding Id}" MinWidth="80" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Дата создания" Binding="{Binding CreateDate}" MinWidth="140" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Код изделия" Binding="{Binding ItemCode}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Наименование изделия" Binding="{Binding ItemName}" MinWidth="200" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Подразделение" Binding="{Binding Department}" MinWidth="125" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Ответственный" Binding="{Binding ResponsiblePerson}" MinWidth="150" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Основание" Binding="{Binding Reason}" MinWidth="150" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Примечание" Binding="{Binding Comment}" MinWidth="200" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Поиск:" HorizontalAlignment="Left" Margin="55,-47,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="searchBox" Margin="108,-44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="SearchText_Changed" HorizontalAlignment="Left" Width="112" Height="23"/>
        <Button HorizontalAlignment="Left" Margin="0,-49,0,0" VerticalAlignment="Top" Height="44" Width="50" Background="White" BorderBrush="White" Click="Button_Click">
            <Image Source="/pictures/back_ward.png" Stretch="Uniform" />
        </Button>
    </Grid>
</Window>
