<Window x:Class="LPI.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Просмотр накладной"
        Width="816" Height="1056" WindowState="Maximized">
    <Grid>
       
        

        <Border RenderTransformOrigin="0.5,0.5"  
            HorizontalAlignment="Left" VerticalAlignment="Center" Grid.ColumnSpan="3">
            <Border.RenderTransform>
                <ScaleTransform ScaleX="0.75" ScaleY="0.75" />
                <!-- Уменьшить на 10% -->
            </Border.RenderTransform>

            <Border BorderThickness="1" BorderBrush="Gray" Width="816" Height="1056" Margin="0,-280,0,0">
           

                <Grid x:Name="contentGrid">
                   

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0" Width="273">
                        <!-- Центральное выравнивание -->
                        <Label x:Name="lblTitle" FontSize="24" FontWeight="Normal" Foreground="Black" HorizontalAlignment="Center">НАКЛАДНАЯ №</Label>
                        <Label x:Name="lblNum" FontSize="24" Foreground="Black" Width="88"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,20,35,0">
                        <Label x:Name="lblCode" FontSize="20" Foreground="Black">КЭ-З-111-78</Label>
                        <Label x:Name="lblDate" FontSize="18" Foreground="Black" Content="{Binding CurrentDateTime}" Margin="28,10,0,0"></Label>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="35,180,10,0">
                        <Label FontSize="18" Foreground="Black">Кому:</Label>
                        <Label FontSize="18" Foreground="Black">Через кого:</Label>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="210,180,10,0">
                        <Label FontSize="18" Foreground="Black">
                            <TextBlock TextDecorations="Underline">СПП</TextBlock>
                        </Label>
                        <Label FontSize="18" Foreground="Black">
                            <TextBlock TextDecorations="Underline">ЛПИ</TextBlock>
                        </Label>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="35,895,10,0">
                        <Label FontSize="18" Foreground="Black">Сдал:</Label>
                        <StackPanel Orientation="Horizontal">
                            <Label x:Name="lblSotr" FontSize="18" Foreground="Black"></Label>
                            <Separator Margin="20,10,0,0" Width="210" Height="1" Background="Black"/>
                            <Label FontSize="18" Foreground="Black" Margin="20,0,0,0">Принял</Label>
                            <Separator Margin="0,10,0,0" Width="240" Height="1" Background="Black"/>
                        </StackPanel>

                    </StackPanel>
                    <DataGrid Name="dgItems" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" FontSize="16" Margin="35,250,35,0" Height="644" VerticalAlignment="Top">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="№" Binding="{Binding RowIndex}" Width="40"/>
                            <DataGridTextColumn Header="Код SL" Binding="{Binding CodeSL}" Width="150">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Ед. Изм." Width="70">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="шт."/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Кол-во" Binding="{Binding Quantity}" Width="70"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="80"/>
                            <DataGridTextColumn Header="Сумма" Binding="{Binding TotalAmount}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>

                </Grid>
            </Border>
        </Border>
        <Button Content="Печать" Margin="7,27,0,0" VerticalAlignment="Top" Click="PrintButton_Click" HorizontalAlignment="Left" Width="43"/>

    </Grid>
</Window>